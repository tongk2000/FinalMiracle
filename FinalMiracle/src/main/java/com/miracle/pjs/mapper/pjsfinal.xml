	<!-- === *** 해당 idx의 보낸 쪽지를 삭제한다. *** === -->
	<update id="delSenderMemo" parameterType="HashMap">
		<if test="idxArr != null">
            update tbl_memomeomory set sstatus = 0
        	where idx in
        	<foreach collection="idxArr" index="i" open="(" separator="," close=")" >
        		${idxArr[i]}
        	</foreach>
        </if>
	</update>
