	<!-- === *** 해당 idx의 받은 쪽지를 삭제한다. *** === -->
	<update id="delReceiverMemo" parameterType="HashMap">
		<if test="idxArr != null">
            update tbl_memoreceiver set rstatus = 0
        	where idx in
        	<foreach collection="idxArr" index="i" open="(" separator="," close=")" >
        		${idxArr[i]}
        	</foreach>
        </if>
	</update>
